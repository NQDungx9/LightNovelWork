    <script>
        $(document).ready(function () {
            $('.btnDelete').click(function (e) {
                e.preventDefault();
                var user = $(this).data('user');
                var id = $(this).data('id');
                var conf = confirm('Bạn Có Muốn Xóa Tài Khoản Này ?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/account/delete',
                        type: 'POST',
                        data: { user: user, id: id },
                        success: function (res) {
                            if (res.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
        });
    </script>
